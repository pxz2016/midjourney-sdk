{
  "private": true,
  "version": "3.0.1",
  "packageManager": "pnpm@7.18.2",
  "type": "module",
  "scripts": {
    "dev": "run-p dev:sdk dev:playground",
    "build": "run-s build:sdk build:playground",
    "dev:sdk": "node scripts/dev",
    "dev:playground": "pnpm -F playground-next dev",
    "build:sdk": "tsc --noEmit && rollup --config rollup.config.ts --configPlugin esbuild",
    "build:playground": "pnpm -F playground2 build",
    "format": "prettier --check --write .",
    "proxy": "pnpm -F proxy start"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.0",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.2",
    "@types/node": "^20.2.4",
    "@types/ws": "^8.5.5",
    "esbuild": "^0.19.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.8",
    "rollup": "^3.23.0",
    "rollup-plugin-dts": "^5.3.0",
    "rollup-plugin-esbuild": "^5.0.0",
    "typescript": "^5.0.4",
    "ws": "^8.14.1"
  }
}
